<Window x:Class="JustMineCraftLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Just Minecraft Launcher! V1.0.0 Alpha1" Height="320" Width="640">
    <Grid>
        <Border BorderBrush="White" 
                BorderThickness="1" 
                HorizontalAlignment="Left" 
                Width="35" 
                Background="#FF5078FF"/>
        <Button Content="Button" 
                HorizontalAlignment="Left" 
                Margin="520,250,0,0" 
                VerticalAlignment="Top" 
                Width="100" 
                RenderTransformOrigin="0,0" 
                Height="30" 
                Click="Button_Click"/>
        <TextBox x:Name="MemoryBox" 
                 HorizontalAlignment="Left" 
                 Height="20" 
                 Margin="520,222,0,0" 
                 TextWrapping="Wrap" 
                 Text="内存添这里" 
                 VerticalAlignment="Top" 
                 Width="100"/>

    </Grid>
</Window>
